{
  "name": "bpsr-tools",
  "version": "1.2.1",
  "description": "BPSR Tools - DPS Meter with Web, Electron Overlay, and CLI modes",
  "main": "main.js",
  "bin": {
    "bpsr-tools": "server.js"
  },
  "engines": {
    "node": "22.20.0"
  },
  "scripts": {
    "build": "pkg .",
    "start": "electron .",
    "lint:prettier": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-builder install-app-deps",
    "preseed": "npm rebuild better-sqlite3 --build-from-source && node src/server/model/seed.js && npx electron-builder install-app-deps",
    "predist": "node scripts/prepareRelease.js",
    "dist": "electron-builder --win --x64",
    "prepublish": "node scripts/prepareRelease.js",
    "publish": "electron-builder --win --x64 --publish always"
  },
  "keywords": [
    "dps",
    "meter",
    "bpsr",
    "game",
    "overlay",
    "electron",
    "packet-sniffer",
    "cli",
    "realtime"
  ],
  "author": "akzios <https://github.com/akzios",
  "contributors": [
    "Akzios <akzios@akzios.com>"
  ],
  "license": "AGPL-3.0",
  "volta": {
    "node": "22.20.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "cap": "^0.2.1",
    "chalk": "^4.1.2",
    "chart.js": "^4.5.1",
    "cli-table3": "^0.6.5",
    "cors": "^2.8.5",
    "electron-updater": "^6.3.9",
    "express": "^5.1.0",
    "google-protobuf": "^4.0.0",
    "googleapis": "^164.1.0",
    "leaflet": "^1.9.4",
    "long": "^5.3.2",
    "protobufjs": "^7.5.4",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.6.0",
    "cbor": "^10.0.11",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "msgpack-lite": "^0.1.26",
    "prettier": "^3.6.2",
    "protobufjs-cli": "^1.1.3",
    "sharp": "^0.34.4"
  },
  "pkg": {
    "scripts": "src/app/cli.js",
    "assets": [
      "public/**/*",
      "tables/**/*",
      "config/settings.json",
      "db/.gitkeep",
      "node_modules/cap/**/*",
      "node_modules/better-sqlite3/**/*",
      "src/**/*"
    ],
    "targets": [
      "node22-win-x64"
    ],
    "outputPath": "dist"
  }
}
